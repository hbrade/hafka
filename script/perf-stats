#!/bin/bash

source script/test_helper

set -e

(cd src &&
  ghc --make -fforce-recomp -rtsopts -threaded -O2 -o ./perf Bench/Main.hs)

trim() {
  sed 's/ *$//g'
}

find_mean() {
  grep 'mean:' | cut -d ':' -f 2 | cut -d ',' -f 1 | trim
}

produce10() {
  echo "`(cd src && ./perf produce/10p +RTS -N4 | find_mean)`"
}

produce100() {
  echo "`(cd src && ./perf produce/100p +RTS -N4 | find_mean)`"
}

consume10() {
  echo "`(cd src && ./perf consume/10c +RTS -N4 | find_mean)`"
}

consume100() {
  echo "`(cd src && ./perf consume/100c +RTS -N4 | find_mean)`"
}

roundtripBasicConsumer() {
  (start_server)
  result=$(echo "`(cd src && ./perf consumerRoundTrip/roundtripBasicConsumer +RTS -N4 | find_mean)`")
  kill_server
  echo "$result"
}

roundtripKeepAliveConsumer() {
  (start_server)
  result=$(echo "`(cd src && ./perf consumerRoundTrip/roundtripKeepAliveConsumer +RTS -N4 | find_mean)`")
  kill_server
  echo "$result"
}

roundtripBasicProducer() {
  (start_server)
  result=$(echo "`(cd src && ./perf producerRoundTrip/roundtripBasicProducer +RTS -N4 | find_mean)`")
  kill_server
  echo "$result"
}

roundtripKeepAliveProducer() {
  (start_server)
  result=$(echo "`(cd src && ./perf producerRoundTrip/roundtripKeepAliveProducer +RTS -N4 | find_mean)`")
  kill_server
  echo "$result"
}

# Get the hash
hash="`git log -1 --pretty=%h`"

echo "hash, produce-10-mean, produce-100-mean, consume-10-mean, consume-100-mean, roundtripBasicConsumer-mean, roundtripKeepAliveConsumer-mean, roundtripBasicProducer-mean, roundtripKeepAliveProducer-mean"
echo "$hash,`produce10`,`produce100`,`consume10`,`consume100`,`roundtripBasicConsumer`, `roundtripKeepAliveConsumer`, `roundtripBasicProducer`, `roundtripKeepAliveProducer`"
